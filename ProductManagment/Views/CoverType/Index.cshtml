@model IEnumerable<ProductManagmentModel.CoverType>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row p-3">
        <div class="col-6 ">
            <h2 class="text-primary">CoverType List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> &nbsp; Create a new Covertype
            </a>
        </div>
    </div>
    <br></br>
    <table class="table table-broder-broderd table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    CoverType Name
                </th>
               @*  <th>
                    Order Numbrer
                </th> *@
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="3 0%">
                        @item.Name
                    </td>

                    <td>
                        <div class="w-75 btn-group" role="group"></div>
                        <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-fill"></i>Edit</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>


